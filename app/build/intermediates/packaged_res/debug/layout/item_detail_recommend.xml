<?xml version="1.0" encoding="utf-8"?>

                                                        

    <com.google.android.material.card.MaterialCardView
        android:layout_height="80dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="15dp"
        android:padding="10dp"
        android:elevation="10dp"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="5dp"
        android:translationY="0dp"
        android:backgroundTint="@color/white" android:tag="layout/item_detail_recommend_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:gravity="center_vertical"
                android:textColor="@color/colo_money"
                android:textStyle="bold"
                android:textSize="20sp"
                android:drawableStart="@drawable/ic_baseline_favorite_border_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/detail_item_recommend" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </com.google.android.material.card.MaterialCardView>

         