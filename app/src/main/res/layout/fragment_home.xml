<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.fish.ui.home.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeFragment">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/home_rel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/home_bg"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="26dp"
                        android:layout_marginTop="20dp">

                        <androidx.appcompat.widget.SearchView
                            android:id="@+id/home_searchView"
                            android:layout_width="300dp"
                            android:layout_height="45dp"
                            android:background="@drawable/search_bg"
                            android:focusable="true"
                            android:queryHint="搜索想要的产品"
                            android:theme="@style/SearchView"
                            app:defaultQueryHint="search"
                            app:iconifiedByDefault="true"
                            app:queryBackground="@android:color/transparent" />

                        <ImageView
                            android:id="@+id/home_list"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginStart="10dp"
                            android:elevation="15dp"
                            android:src="@drawable/ic_list">

                        </ImageView>
                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/home_cardView"
                        android:layout_width="360dp"
                        android:layout_height="135dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="90dp"
                        android:background="#FFFEF2FF"
                        android:elevation="20dp"
                        app:cardCornerRadius="14dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="26dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="9dp"
                            android:text="@string/home_card_title"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:layout_marginStart="110dp"
                            android:layout_marginTop="15dp"
                            android:text="@string/home_card_title2"
                            android:textColor="#805946"
                            android:textSize="11sp" />

                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="90dp"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="35dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_home_1" />

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="17dp"
                                android:gravity="center_horizontal"
                                android:text="@string/home_card_text_bold_1"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="13dp"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                                android:text="@string/home_card_text_common_1"
                                android:textColor="@color/textGray"
                                android:textSize="11sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="90dp"
                            android:layout_marginStart="108dp"
                            android:layout_marginTop="35dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_home_2" />

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="17dp"
                                android:gravity="center_horizontal"
                                android:text="@string/home_card_text_bold_2"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="13dp"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                                android:text="@string/home_card_text_common_2"
                                android:textColor="@color/textGray"
                                android:textSize="11sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="90dp"
                            android:layout_marginStart="192dp"
                            android:layout_marginTop="35dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_home_3" />

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="17dp"
                                android:gravity="center_horizontal"
                                android:text="@string/home_card_text_bold_3"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="13dp"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                                android:text="@string/home_card_text_common_3"
                                android:textColor="@color/textGray"
                                android:textSize="11sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="90dp"
                            android:layout_marginStart="276dp"
                            android:layout_marginTop="35dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_home_4" />

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="17dp"
                                android:gravity="center_horizontal"
                                android:text="@string/home_card_text_bold_4"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="13dp"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                                android:text="@string/home_card_text_common_4"
                                android:textColor="@color/textGray"
                                android:textSize="11sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>


                <com.google.android.material.tabs.TabLayout
                    android:translationY="-20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:background="@color/textGray"
                    android:id="@+id/home_tablayout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:background="@color/teal_200"
                    android:id="@+id/home_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>


            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.core.widget.NestedScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>